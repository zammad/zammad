<input id="<%= @attribute.id %>" type="<%= (@attribute.input_type || @attribute.type) %>" <% if @attribute.name: %>name="<%= @attribute.name %>"<% end %> value="<%= @attribute.value %>" class="form-control <%= @attribute.class %>" <% if @attribute.placeholder: %>placeholder="<%- @Ti(@attribute.placeholder) %>"<% end %> <%= @attribute.required %> <%= @attribute.autofocus %> <%- @attribute.autocapitalize %> <%- @attribute.autocomplete %> <% if @attribute.min isnt undefined: %> min="<%= @attribute.min %>"<% end %><% if @attribute.max isnt undefined: %> max="<%= @attribute.max %>"<% end %><% if @attribute.step: %> step="<%= @attribute.step %>"<% end %><% if @attribute.maxlength: %> maxlength="<%= @attribute.maxlength %>"<% end %><% if @attribute.disabled: %> disabled<% end %><% if @attribute.type is 'email': %> pattern="(([^<>()\[\]\.,;:\s@\u0022]+(\.[^<>()\[\]\.,;:\s@\u0022]+)*)|(\u0022.+\u0022))@(([^<>()[\]\.,;:\s@\u0022]+\.)+[^<>()[\]\.,;:\s@\u0022]{2,})" title="<%- @Ti("Enter a valid email address.")%>"<% end %> />
